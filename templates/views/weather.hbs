{{>header}}
<div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="main_content">
                    <form class="temp_form">
                        <input type="text" id="cityname" placeholder="Enter your city" autocomplete="off"/>
                        <input type="submit" value="search" id="submitbtn"/>
                    </form>
                </div>
                <div class="tempinformation">
                    <div class="top_layer">
                        <p id="day">Tuesday</p>
                        <p id="today_data">24 dec</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name_output">Get Output here</p>
                        <div class="middle_layer">
                            <p id="temp"><span>0</span><sup>o</sup>C</p>
                            <p id="temp_status"><i class="fa fa-cloud"></i></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
     </div>
{{>footer}}
<script src="js/main.js"></script>